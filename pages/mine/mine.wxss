.head-pic {
  overflow: hidden;
  width: 15vw;
  height: 15vw;
  box-shadow: 0 0 5px #ddd;
  border: 1px solid #dddee1;
}
.head-pic image {
  width: 100%;
  height: 100%;
}
.head-text {
  width: 80vw;
}
.head-text view .nickname {
  font-size: 30rpx;
  color: #fff;
}
.head-text .username {
  color: #fff;
  font-size: 28rpx;
}
.fun-item {
  width: 20vw;
  margin: 0 20px;
}
.fun-item .count {
  font-size: 30rpx;
  width: 100%;
  color: #fff;
  text-align: center;
}
.fun-item .name {
  color: #fff;
  font-size: 33rpx;
  width: 100%;
  text-align: center;
}
.card-area {
  width: 90vw;
  padding: 6px;
  border-radius: .8rem;
  background-color: #fff;
  margin-bottom: 10px;
}
.vip-area {
  margin-bottom: -10px;
  position: relative;
  top: -18px;
}
.vip-area .left-area {
  width: 30%;
  border-right: 1px solid #e9eaec;
}
.vip-area .left-area .rank {
  font-size: 32rpx;
}
.vip-area .left-area .score {
  font-size: 25rpx;
}
.vip-area .right-area {
  width: 70%;
}
.vip-area .right-area .tips {
  font-size: 25rpx;
}
.vip-area .right-area .goVip {
  font-size: 26rpx;
}
.order-title {
  padding: 2px 6px;
  border-bottom: 1px solid #e9eaec;
}
.order-title .my-text {
  font-weight: bold;
  font-size: 35rpx;
}
.order-title .detail-text {
  font-size: 30rpx;
}
.order-item {
  width: 15vw;
  margin: 2px 6px;
}
.order-item text {
  font-size: 24rpx;
}
