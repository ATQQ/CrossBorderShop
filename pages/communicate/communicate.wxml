<!--pages/communicate/communicate.wxml-->
<scroll-view scroll-y="true" id='message-sv'>
	<!-- 分类导航区域 -->
	<view>
		<i-tabs current="{{ tabscurrent_scroll }}" scroll bindchange="tabsChangeScroll">
			<i-tab key="tab1" title="全部" />
			<i-tab key="tab10" title="选项1" />
			<i-tab key="tab2" title="选项2" />
			<i-tab key="tab3" title="选项3" />
			<i-tab key="tab4" title="选项4" />
			<i-tab key="tab5" title="选项5" />
			<i-tab key="tab6" title="选项6" />
			<i-tab key="tab7" title="选项7" />
			<i-tab key="tab8" title="选项8" />
			<i-tab key="tab9" title="选项9" />
		</i-tabs>
		<view class='fw-flex fw-c-c fw-warp fw-w100'>
			<block wx:for="{{20}}">
				<view class='message-item'>
					<view class='message-head'>
						<image src="../../source/image/testpic.png" mode='scaleTofill' />
					</view>
					<view class='message-text'>
						<view class='text-title'>
							<text class='nickname'>昵称</text>
							<text class='time'>2019-02-19,18:29</text>
						</view>
						<view class='fw-flex fw-c-sb'>
						<text class='text-detail van-ellipsis'>这里是消息内容,超过类容会省略少时诵诗书所所所所所</text>
						<text class='fw-c-Disabled' style='font-size:25rpx;'>详细></text>							
						</view>
					</view>
				</view>
			</block>

		</view>
	</view>
</scroll-view>

<view>
	<i-modal title="信息发布" visible="{{ visiblePub }}" bind:ok="surePub" bind:cancel="cancelPub" ok-text='发布'>
	<view>
		<picker class="" mode="selector" range="{{typeArr}}" range-key="" value="{{typeindex}}"
			disabled="false" bindchange="pubtypeChange" bindcancel="">
			<view>
				分类:{{typeArr[typeindex]}}
			</view>
		</picker>
	</view>
	  
	</i-modal>
</view>
<!--发布信息按钮-->
<view id='publish' class='fw-flex fw-wrap fw-c-c' bindtap="publishnews">
	<i-icon class='fw-w100 fw-text-c' type="praise_fill" size="22" color="#fff" />
	<text class='fw-w100 fw-text-c' style='font-size:26rpx;'>发布</text>
</view>
<view>
	<!-- 底部导航栏 -->
	<i-tab-bar current="{{ bottomcurrent }}" color='#2d8cf0' bindchange="bottomPageChange" fixed="true">
		<block wx:if="{{power==1}}">
			<i-tab-bar-item
			 key="homepage"
			 icon="homepage"
			 current-icon="homepage_fill"
			 title="首页"
			/>
			<i-tab-bar-item
			 key="message"
			 icon="message"
			 current-icon="message_fill"
			 title="消息"
			/>
			<i-tab-bar-item
			 key="communicate"
			 icon="interactive"
			 current-icon="interactive_fill"
			 count="1"
			 title="交流"
			/>
			<i-tab-bar-item
			 key="mine"
			 icon="mine"
			 current-icon="mine_fill"
			 dot
			 title="我的"
			/>
		</block>
	</i-tab-bar>
</view>

