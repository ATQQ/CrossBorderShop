/**index.wxss**/
@import "../../source/plunge/fw/fw.wxss";
@import "../../source/plunge/weui/example/searchbar/searchbar.wxss";

.searchbar {
  display: flex;
}

.searchbar .left-icon {
  width: 8%;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
  padding-top: 6px;
}

.searchbar .left-icon i-icon {
  margin-left: 10px;
}

.searchbar .right-search {
  width: 92%;
}

swiper {
  height: 120px;
}

swiper-item {
  height: 100%;
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.fun-item {
  margin: 3px 10px;
  width: 13vw;
  display: flex;
  flex-direction: column;
}

.fun-item image {
  width: 13vw;
  height: 13vw;
  border-radius: 50%;
  border: 1px solid #ddd;
}

.fun-item text {
  text-align: center;
  font-size: 24rpx;
}

/* button::after{
  display: none;
} */

button {
  background: none;
  border-radius: 0px;
}

/* s推荐栏 */

.recommend {
  width: 95vw;
  border-radius: 1rem;
  border: 1px solid #ddd;
  background-color: #fff;
}

.recommend-title {
  width: 100%;
  padding: 4px 10px;
  display: flex;
}

.recommend-title i-icon {
  width: 10%;
}

.recommend-title .notice-text{
  width: 85%;
}
.recommend-item{
  width: 42%;
  padding: 10px;
}
.item-title text{
 font-size: 16px;
 font-weight: bold;
 line-height: 30px;
 vertical-align: middle;
 text-align: center;
 width: 80%;
}
.item-body image{
  width: 20vw;
  height: 20vw;
}

/* 底部分类商品栏 */
.goods-item{
  width: 45vw;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-item image{
  width: 45vw;
  height: 45vw;
}
.goods-title{
font-size: 15px;
white-space: nowrap;
}
.goods-price{
color:#2d8cf0;
}
.goods-sell{
color: #80848f;
font-size: 13px;
margin-left: 10px;
}