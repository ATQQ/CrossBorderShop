/**index.wxss**/
@import "../../source/plunge/fw/fw.wxss";
@import "../../source/plunge/weui/example/searchbar/searchbar.wxss";
.searchbar{
  display: flex;
}
.searchbar .left-icon{
  width: 8%;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
  padding-top: 6px;
}
.searchbar .left-icon i-icon{
margin-left: 10px;
}
.searchbar .right-search{
  width: 92%;
}
swiper{
  height: 120px;
}
swiper-item{
  height: 100%;
  width: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.fun-item{
  margin: 10px;
  width: 13vw;
  display: flex;
  flex-direction: column;
}
.fun-item image{
  width: 13vw;
  height: 13vw;
  border-radius: 50%;
  border: 1px solid #ddd;
}
.fun-item text{
  text-align: center;
  font-size: 24rpx;
}
