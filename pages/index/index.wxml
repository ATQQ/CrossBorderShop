<!--index.wxml-->
<view class=''>
  <!-- 顶部搜索栏 -->
  <view class="searchbar">
    <!-- scan-icon -->
    <view class="left-icon" bindtap='clickScan'>
      <i-icon type="scan" size="22" color="#80848f" />
    </view>
    <view class='right-search'>
      <view class="weui-search-bar">
        <view class="weui-search-bar__form">
          <view class="weui-search-bar__box">
            <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
            <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
            <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
              <icon type="clear" size="14"></icon>
            </view>
          </view>
          <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
            <icon class="weui-icon-search" type="search" size="14"></icon>
            <view class="weui-search-bar__text">搜索</view>
          </label>
        </view>
        <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="sureInput">确定</view>
      </view>
    </view>

  </view>
  <scroll-view style='background-color:rgba(0,0,0,0.07);'>
    <!-- 广告轮播图 -->
    <view>
      <swiper indicator-dots='true' autoplay='true' interval='3000'>
        <block wx:for="{{swiperItems}}" wx:key="src">
          <swiper-item>
            <image src='{{item.src}}' mode='scaleTofill'></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 小功能 -->
    <view class='fw-content-center fw-flex'>
      <view class='fun-item' data-key='123' bindtap='test'>
        <image src='../../source/image/find.png' mode='scaleTofill'>
        </image>
        <text>码头</text>
      </view>
      <!-- <view class='fun-item' data-key='456' bindtap='test'>
          <image src='../../source/image/find.png' mode='scaleTofill'>
          </image>
          <text>码头</text>
        </view> -->
    </view>
    <!-- 推荐 -->
    <view class=''>
      <view>
        <!-- 标题栏 -->
        <view>广播</view>
        <text>1234555</text>
      </view>
    </view>
  </scroll-view>
  <!-- 底部导航栏 -->
  <i-tab-bar current="{{ current }}" bindchange="bottomPageChange" fixed="true">
    <block wx:if="{{power==1}}">
      <i-tab-bar-item key="homepage" icon="homepage" current-icon="homepage_fill" title="首页"></i-tab-bar-item>
      <i-tab-bar-item key="message" icon="message" current-icon="message_fill" title="消息"></i-tab-bar-item>
      <i-tab-bar-item key="communicate" icon="interactive" current-icon="interactive_fill" count="1" title="交流"></i-tab-bar-item>
      <i-tab-bar-item key="mine" icon="mine" current-icon="mine_fill" dot title="我的"></i-tab-bar-item>
    </block>
  </i-tab-bar>
</view>